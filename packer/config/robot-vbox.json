
{
  "builders":
  [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://centos.mirror.xtratelecom.es/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
      "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
      "iso_checksum_type": "sha256",
      "disk_size": 10000,
      "output_directory": "output_robot",
      "shutdown_command": "sudo shutdown -P now",
      "shutdown_timeout": "20s",
      "vm_name": "centos-robot",
      "headless": true,
      "format": "ovf",
      "http_directory": ".",
      "ssh_username": "centos",
      "ssh_password": "centos",
      "ssh_wait_timeout": "60m",
      "boot_wait": "10s",
      "boot_command":
      [
        "<tab>text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos_kickstart.cfg<enter>"
      ]
    }

  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../builder/packer/provision/baseline.sh",
        "./provision/robot.sh",
        "../builder/packer/provision/system_reseal.sh",
        "./provision/vboxguest.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; if [ \"$UID\" == \"0\" ]; then {{ .Vars }} '{{ .Path }}'; else {{ .Vars }} sudo -E '{{ .Path }}'; fi"
    },
    {
      "type": "shell",
      "inline": ["sudo hostnamectl set-hostname centos7-robot"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false,
        "output": "box/centos_robot_{{ .Provider }}.box"
      },
      {
      "type": "atlas",
      "token": "{{ user `atlas_token` }}",
      "artifact": "ejisfza/odl-centos7-robot",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "virtualbox"
        }
      }
    ]
  ]
}

